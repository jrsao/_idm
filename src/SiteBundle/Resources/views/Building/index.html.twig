{% extends 'SiteBundle:Building:Common/layout.html.twig' %}

{% block pageTitle %}Liste des batiments{% endblock pageTitle %}

{% block leftSide %} {{ block('indexActions') }} {% endblock leftSide %}

{% block information %}
    {% embed "CommonBundle:Listing:listing.html.twig" with {'entities': entities} %}
        
        {% block showRoute %}
            {{ path('building_show', {'id': entity.id })}}
        {% endblock showRoute%}    
        
        {% block caption %}{% endblock caption%}
        
        {% block tableHeader %}
            {{ listing.header('Id')}}
            {{ listing.header('Nom')}}
            {{ listing.header('Description')}}
            {{ listing.header('Site')}}
        {% endblock tableHeader%}
        
        {% block tableBody %}
            {{ listing.element( entity.id )}}
            {{ listing.element( entity.name )}}
            {{ listing.element( entity.description )}}
            {{ listing.element( entity.site )}}
        {% endblock tableBody%}
        
    {% endembed %}
{% endblock information%}
