<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">

            {% stylesheets '../app/Resources/public/css/*' %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts
            '../vendor/components/jquery/jquery.min.js'
            '../vendor/components/angular.js/angular.min.js'
            '../app/Resources/public/js/*'
            %}
                <script src="{{ asset_url }}" type="text/javascript">></script>
            {% endjavascripts %}

            <script src="{{ asset('js/bootstrap.js') }}"></script>

            <script>
                    $(document).ready(function () {
                        trRef();
                    });

                    angular.module('myApp', []).config(function ($interpolateProvider) {
                        $interpolateProvider.startSymbol('{[').endSymbol(']}');
                    });
            </script>
        {% endblock %}
    </head>
   
    <body>
        {% block header %}
            {% include 'header.html.twig' %}
        {% endblock %}  

        <div class='col-lg-2'>
            {% block sidebar %}
                {% include 'sidebar.html.twig' %}
            {% endblock %}    
        </div>

        {% block body %}
            <div ng-app="myApp" class='col-lg-10'>
                <div class="col-lg-2">
                {% block leftSide %}{% endblock %}
                </div>

                <div class="col-lg-9">
                    <h2>{% block pageTitle %}{% endblock %}</h2>
                
                    <div class="col-lg-8">
                        <h4 class="left">{% block informationTitle %}{% endblock %}</h4>
                    {% block information %}{% endblock  %}
                    </div>

                    <div class="col-lg-4">
                        {% block relation %}{% endblock %}
                    </div>
                </div>
        
                <div class="col-lg-9">
                     <h4 class="left">{% block titleSecondRelation %}{% endblock %}</h4>
                    {% block secondRelation %}{% endblock %}
                </div>
            </div>
        {% endblock %}
</body>
</html>
